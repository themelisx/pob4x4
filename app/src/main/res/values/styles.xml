<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--
        <item name="android:textColorSecondary">@color/text_main2</item>
        <item name="android:textColorPrimary">@color/text_main</item>
        <item name="android:windowBackground">@color/black_light_back</item>
        -->
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black_light</item>
        <item name="android:textColorPrimary">@color/black_light_back</item>
        <item name="android:textSize">12sp</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="NoTitleTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
